<Window x:Class="loginScreen.loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginScreen"
        mc:Ignorable="d"
        Title="loginWindow" Height="450" Width="450" FontSize="14" Background="MediumAquamarine">
    <Border Background="Black" Margin="20" CornerRadius="20">
    <StackPanel Margin="20">
    <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
        <Separator></Separator>
        <Label Content="Username" Foreground="White"/>
        <TextBox Name="txtUsername" Background="Chocolate" Foreground="White" FontSize="18"/>
        <Label Content="Password" Foreground="White"/>
        <TextBox Name="txtPassword" Background="Chocolate" Foreground="White" FontSize="18"/>
        <Button Name="btnSubmit" Background="Chocolate" Content="SUBMIT" Foreground="White" FontSize="18" Margin="60 10"></Button>
        </StackPanel>
    </Border>
</Window>
